<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/landing_card"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <ImageView
            android:id="@+id/wish_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/like_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_menu_send"
            android:layout_toRightOf="@+id/wish_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/share_img"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_menu_share"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/prod_name"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="Android"
            android:layout_below="@+id/prod_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/prod_price"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Android"
            android:layout_below="@+id/prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/prod_ofr_price"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Android"
            android:layout_below="@id/prod_name"
            android:layout_toRightOf="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/rating"

            android:layout_below="@+id/prod_name"
            android:layout_alignBottom="@id/prod_ofr_price"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>